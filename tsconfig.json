{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "target": "ES2021",
    "module": "ES2022",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
